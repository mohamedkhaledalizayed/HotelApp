<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/item_view"
    app:cardElevation="6dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/image"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Number : 12 "
                    android:textSize="15sp"
                    android:id="@+id/room_number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price : $320"
                    android:id="@+id/price"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginTop="10dp"
                 android:gravity="center"
                 >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Check In : 28-10-2018"
                     android:textColor="#9e9c9c"
                     android:textSize="12sp"
                     android:id="@+id/check_in"
                     android:background="@drawable/price_background"
                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Check Out : 12-2-2018"
                     android:background="@drawable/price_background"
                     android:textColor="#9e9c9c"
                     android:id="@+id/check_out"
                     android:layout_marginStart="10dp"
                     android:textSize="12sp"
                     />
             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Of Days : 3"
                    android:textColor="#9e9c9c"
                    android:id="@+id/number_days"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adult Number : 2"
                    android:textColor="#9e9c9c"
                    android:id="@+id/adult_number"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children Number : 1"
                android:layout_margin="5dp"
                android:textColor="#9e9c9c"
                android:id="@+id/children_number"
                android:textSize="12sp"

                />

            </LinearLayout>


</android.support.v7.widget.CardView>
